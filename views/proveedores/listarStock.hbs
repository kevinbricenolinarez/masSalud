<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Stock</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12">
                        <form role="form" method="POST" action="/proveedores/listarStock">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por proveedor" name="rut">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>

                    <div class="col-lg-2">
                        <a class="btn btn-alert" href="/proveedores/listarStock/byList">Orden de creación</a>
                    </div>
                    <div class="col-lg-2">
                        <a class="btn btn-alert" href="/proveedores/listarStock/byNomAZ">Nombre: A-Z</a>
                    </div>
                    <div class="col-lg-2">
                        <a class="btn btn-alert" href="/proveedores/listarStock/byNomZA">Nombre: Z-A</a>
                    </div>
                    <div class="col-lg-2">
                        <a class="btn btn-alert" href="/proveedores/listarStock/byRutAsc">RUT: Ascendente</a>
                    </div>
                    <div class="col-lg-2">
                        <a class="btn btn-alert" href="/proveedores/listarStock/byRutDesc">RUT: Descendente</a>
                    </div>

                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Proveedor</th>
                                    <th>Medicamento</th>
                                    <th>Presentacion</th>
                                    <th>Formato</th>
                                    <th>Fecha</th>
                                    <th>Cantidad</th>
                                    
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each stock}}
                                <tr class="odd gradeX">
                                    <td>{{IdProv_s}}</td>
                                    <td>{{IdMed_s}}</td>
                                    <td>{{TipoPresentacion_s}}</td>
                                    <td>{{TipoFormato_s}}</td>
                                    <td>{{FechaLlegadaStock}}</td>
                                    <td>{{Cantidad}}</td>
                                    
                                    <td>
                                        
                                        <a class="btn btn-danger" href="/proveedores/eliminar/{{IdProv}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->