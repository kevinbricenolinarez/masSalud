<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Médicos</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>RUT</th>
                                    <th>Nombre</th>
                                    <th>Especialidad</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each medicos}}
                                <tr class="odd gradeX">
                                    <td>{{RutMed}}</td>
                                    <td>{{NomMed_m}}</td>
                                    <td>{{EspecMed}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/medicos/editar/{{RutMed}}">Editar</a>
                                        <a class="btn btn-danger" href="/medicos/eliminar/{{RutMed}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}

                             
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->